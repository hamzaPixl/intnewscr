{
  "name": "intnewscr",
  "version": "1.0.0",
  "description": "News interactive screen backend",
  "main": "main.js",
  "scripts": {
    "loadConfig": "node tools/load-config.js",
    "cleanlogs": "hooks/clear-logs.sh",
    "pretest": "npm run lint && npm run cleanlogs",
    "posttest": "npm run cleanlogs",
    "test": "mocha test --recursive --watch",
    "poststart": "pm2 logs --lines 0",
    "precommit": "hooks/test-only.sh && hooks/no-console-call.sh",
    "prepush": "hooks/pre-push.sh",
    "lint": "eslint . --ext .js",
    "inspect": "jsinspect",
    "start": "pm2 start pm2.json",
    "stop": "pm2 stop all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hamzaPixl/intnewscr.git"
  },
  "author": "Mounir Hamza",
  "license": "MIT",
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "mocha": "^3.2.0"
  },
  "dependencies": {
    "assert": "^1.4.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "express": "^4.15.2",
    "jsend": "^1.0.2",
    "jsonwebtoken": "^7.3.0",
    "lodash": "^4.17.4",
    "moment": "^2.19.1",
    "mongodb": "^2.2.33",
    "pm2": "^2.7.2",
    "winston": "^2.4.0"
  }
}
